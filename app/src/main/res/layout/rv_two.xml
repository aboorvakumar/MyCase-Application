<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:weightSum="10"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="2"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/user"/>

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:text="Client Name:"
                    android:textSize="10sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/clientname_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="ddd"
                    android:textSize="10sp"
                    android:textColor="@color/brown"
                    android:textStyle="bold" />


            </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/gmail"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:text="Client Email:"
                android:textSize="10sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginTop="3dp"
                android:layout_weight="5"
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ddd"
                android:textSize="10sp"
                android:textColor="@color/brown"
                android:textStyle="bold" />


        </LinearLayout>

           <LinearLayout
               android:weightSum="10"
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                 <ImageView
                     android:layout_weight="2"
                     android:layout_width="0dp"
                     android:layout_height="20dp"
                     android:tint="@color/colorPrimary"
                     android:src="@drawable/call"/>

                 <TextView
                     android:layout_marginTop="3dp"
                     android:layout_weight="3"
                     android:layout_width="0dp"
                     android:text="Mobile No:"
                     android:textSize="10sp"
                     android:textColor="#000"
                     android:textStyle="bold"
                     android:layout_height="match_parent" />

                 <TextView

                     android:layout_weight="5"
                     android:id="@+id/phone_txt"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="3dp"
                     android:text="ddd"
                     android:textSize="10sp"

                     android:textColor="@color/brown"
                     android:textStyle="bold" />


             </LinearLayout>
             <LinearLayout
                 android:weightSum="10"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/document"/>

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:text="Case Name:"
                    android:textSize="10sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="5"
                    android:id="@+id/casename_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"

                    android:text="ddd"
                    android:textSize="10sp"

                    android:textColor="@color/brown"
                    android:textStyle="bold" />


            </LinearLayout>

              <LinearLayout
                  android:weightSum="10"
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                 <ImageView
                     android:layout_weight="2"
                     android:layout_width="0dp"
                     android:layout_height="20dp"
                     android:tint="@color/colorPrimary"
                     android:src="@drawable/casenumber"/>

                 <TextView
                     android:layout_marginTop="3dp"
                     android:layout_weight="3"
                     android:layout_width="0dp"
                     android:text="Case Number:"
                     android:textSize="10sp"
                     android:textColor="#000"
                     android:textStyle="bold"
                     android:layout_height="match_parent" />

                 <TextView
                     android:layout_marginTop="3dp"
                     android:id="@+id/caseno_txt"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="5"
                     android:text="ddd"
                     android:textSize="10sp"
                     android:textColor="@color/brown"
                     android:textStyle="bold" />


             </LinearLayout>

           <LinearLayout
                  android:weightSum="10"
                  android:layout_marginTop="10dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <ImageView
                      android:layout_weight="2"
                      android:layout_width="0dp"
                      android:layout_height="20dp"
                      android:tint="@color/colorPrimary"
                      android:src="@drawable/title"/>

                  <TextView
                      android:layout_marginTop="3dp"
                      android:layout_weight="3"
                      android:layout_width="0dp"
                      android:text="Case Title:"
                      android:textSize="10sp"
                      android:textColor="#000"
                      android:textStyle="bold"
                      android:layout_height="match_parent" />

                  <TextView
                      android:layout_marginTop="3dp"
                      android:id="@+id/casetitle_txt"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="5"
                      android:text="ddd"
                      android:textSize="10sp"
                      android:textColor="@color/brown"
                      android:textStyle="bold" />


              </LinearLayout>

            <LinearLayout
                android:weightSum="10"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/casedetails"/>

                <TextView

                    android:layout_marginTop="3dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:text="Case Details:"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/casedetails_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="ddd"
                    android:textSize="10sp"
                    android:textColor="@color/brown"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:weightSum="10"
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                 <ImageView
                     android:layout_weight="2"
                     android:layout_width="0dp"
                     android:layout_height="20dp"
                     android:tint="@color/colorPrimary"
                     android:src="@drawable/status"/>

                 <TextView
                     android:layout_marginTop="3dp"
                     android:layout_weight="3"
                     android:layout_width="0dp"
                     android:text="Case  Status:"
                     android:textColor="#000"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:layout_height="match_parent" />

                 <TextView
                     android:layout_marginTop="3dp"
                     android:id="@+id/status_txt"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="5"
                     android:text="ddd"
                     android:textSize="10sp"
                     android:textColor="@color/brown"
                     android:textStyle="bold" />




             </LinearLayout>

            <LinearLayout
                android:weightSum="10"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/dates"/>

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:text="Date:"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="ddd"
                    android:textSize="10sp"
                    android:textColor="@color/brown"
                    android:textStyle="bold" />




            </LinearLayout>

               <LinearLayout
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:visibility="invisible"
                       android:layout_marginLeft="5dp"
                       android:layout_width="wrap_content"
                       android:id="@+id/client_idtxt"
                       android:textColor="#000"
                       android:textStyle="bold"
                       android:layout_height="match_parent" />

                   <TextView
                       android:visibility="invisible"
                       android:layout_marginLeft="5dp"
                       android:layout_width="wrap_content"
                       android:id="@+id/case_id"
                       android:textColor="#000"
                       android:textStyle="bold"
                       android:layout_height="match_parent" />

